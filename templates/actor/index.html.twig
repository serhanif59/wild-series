{% extends 'base.html.twig' %}

{% block title %}Actor index
{% endblock %}

{% block body %}
	<h1>Acteur index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>firstname</th>
				<th>lastname</th>
				<th>Voir Fiche</th>
			</tr>
		</thead>
		<tbody>
			{% for actor in actors %}
				<tr>
					<td>{{ actor.id }}</td>
					<td>{{ actor.firstname }}</td>
					<td>{{ actor.lastname }}</td>
					<td>
						<a href="{{ path('app_actor_show', {'id': actor.id}) }}">show</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_actor_new') }}">Create new</a>
{% endblock %}
